@page
@model OrderFoodCore3.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "List";
}

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" 
                   value="" name="searchTerm"/>
            <span class="input-group-btn">
                <button class="btn btn-default">
                    <i class="fa fa-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    @foreach (var restaurant in @Model.Restaurants)
    {
        <tr>
            <td>@restaurant.Name</td>
            <td>@restaurant.Location</td>
            <td>@restaurant.Cuisine</td>
            <td>
                @*<a class="btn btn-lg"
           href="/Restaurants/Detail?restaurantId=@restaurantId">
            <i class="icon-zoom-in"></i>
        </a>*@
                <!--Using Tag Helpers-->
                <a class="btn btn-lg"
                   asp-page="./Detail" asp-route-restaurantId="@restaurant.Id">
                    <i class="fa fa-plus"></i>
                </a>
                <a class="btn btn-lg"
                   asp-page="./Edit" asp-route-restaurantId="@restaurant.Id">
                    <i class="fa fa-edit"></i>
                </a>
            </td>
        </tr>
    }
</table>

<a asp-page="./Edit" class="btn btn-primary">Add New</a>

<div>
    @Model.Message
</div>

